
<div class="row bg-white py-2">
  <div class="col-5 px-5">
    <%= cl_image_tag @cocktail.photo, alt: "cocktail",  width: "100%" %>
    <%= link_to 'Back', root_path, class: "highlight my-4"%>
  </div>

  <div class="col-6 recipe">
    <div class="text-right">
      <h1><%= @cocktail.name %></h1>
    </div>
    <p class="mt-2"><%= @cocktail.description %></p>

    <h6 class="mt-4"><span class="highlight">Ingredients</span></h6>
    <div class="ingredient-section d-flex">
      <div class="flex-grow-1">
        <%= render 'cocktails/ingredientlist' %>
      </div>
      <div class="ingredient-form">
        <%= render '/doses/form' %>
      </div>

    </div>
  </div>
</div>

<div class="row bg-white py-2">
  <div class="col-6">
  </div>
</div>
